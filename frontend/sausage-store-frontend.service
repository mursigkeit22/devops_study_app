[Unit]
Description=Frontend of sausage-store

[Service]
SuccessExitStatus=143
User=front-user
Group=front-user
ExecStart=/usr/bin/http-server /var/www-data/dist/frontend/ -p 80 --proxy http://localhost:8080
Restart=always
StandardOutput=append:/opt/log/sausage-store-frontend.log
StandardError=append:/opt/log/error-sausage-store-frontend.log

[Install]
WantedBy=multi-user.target
